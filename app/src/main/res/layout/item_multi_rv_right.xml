<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.niukeclient.niuke.ui.viewModel.homeViewModel.MultiRecycleRightItemViewModel" />

        <variable
            name="viewModelRight"
            type="com.niukeclient.niuke.ui.viewModel.homeViewModel.MultiRecycleRightItemViewModel" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:binding="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#909090"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="10dp"
        binding:onClickCommand="@{viewModelRight.itemClick}">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModelRight.text}"
            android:textColor="@color/textColor" />

    </LinearLayout>
</layout>